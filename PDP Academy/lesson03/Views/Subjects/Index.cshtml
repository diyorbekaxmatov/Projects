@model IEnumerable<PDP_Academy.Models.Subject>

@{
    ViewData["Title"] = "Index";
}

<h1>Subject</h1>

<form asp-controller="Subjects" asp-action="Index">
    <p>
        Search by name: <input type="text" name="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a class="text-dark" asp-route-sortorder="@ViewData["IdSort"]">
                    @Html.DisplayName("Id") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a class="text-dark" asp-route-sortorder="@ViewData["TitleSort"]">
                    @Html.DisplayName("Title") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a class="text-dark" asp-route-sortorder="@ViewData["DescriptionSort"]">
                    @Html.DisplayName("Description") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a class="text-dark" asp-route-sortorder="@ViewData["PriceSort"]">
                    @Html.DisplayName("Price") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a class="text-dark" asp-route-sortorder="@ViewData["NumberOfModulesSort"]">
                    @Html.DisplayName("NumberOfModules") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a class="text-dark" asp-route-sortorder="@ViewData["TotalHoursSort"]">
                    @Html.DisplayName("Total Hours") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfModules)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalHours)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
