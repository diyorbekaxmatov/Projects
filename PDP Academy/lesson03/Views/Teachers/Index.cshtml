@model IEnumerable<PDP_Academy.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}

<h1>Teacher</h1>
<form asp-controller="Teachers" asp-action="Index">
    <p>
        Search by firstname: <input type="text" name="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a class="text-dark" asp-route-sortorder="@ViewData["IdSort"]">
                    @Html.DisplayName("Id") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a class="text-dark" asp-route-sortorder="@ViewData["FirstNameSort"]">
                    @Html.DisplayName("First Name") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a class="text-dark" asp-route-sortorder="@ViewData["LastNameSort"]">
                    @Html.DisplayName("Last Name") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a class="text-dark" asp-route-sortorder="@ViewData["PhoneNumberSort"]">
                    @Html.DisplayName("Phone Number") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a class="text-dark" asp-route-sortorder="@ViewData["HourlyRateSort"]">
                    @Html.DisplayName("Hourly Rate") <i class="fa fa-sort"></i>
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourlyRate)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
