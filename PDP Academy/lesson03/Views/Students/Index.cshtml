@model PDP_Academy.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Students</h1>

<form asp-controller="Students" asp-action="Index" method="post">
    <p>
        <div class="d-flex">
            <div class="form-outline search-input">
                <input type="text" class="form-control input" placeholder="Search student"
                       name="SearchString" value="@ViewData["CurrentSearch"]" />
            </div>
            <button type="submit" value="Search" class="btn btn-outline-dark ml-2 mr-2">
                <i class="fa fa-search"></i>
            </button>

            <select asp-for="Group" asp-items="Model.Groups" class="form-select" aria-label="Select group">
                <option>All</option>
            </select>
        </div>
    </p>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="table-responsive card">
    <table class="table table-bordered table-hover table-striped table-sm caption-top">
        <caption>List of students</caption>
        <thead class="table-light">
            <tr>
                <th>
                    <a class="text-dark" asp-route-sortorder="@ViewData["IdSort"]">
                        @Html.DisplayName("Id") <i class="fa fa-sort"></i>
                    </a>
                </th>
                <th>
                    <a class="text-dark" asp-route-sortOrder="@ViewData["FullNameSort"]">
                        @Html.DisplayName("Student Name") <i class="fa fa-sort"></i>
                    </a>
                </th>
                <th>
                    <a class="text-dark" asp-route-sortOrder="@ViewData["AgeSort"]">
                        @Html.DisplayName("Age") <i class="fa fa-sort"></i>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Students)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Id)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>